<% content_for :blog_body do %>
  <%= render 'layouts/blog/breadcrumb', data: { :current => 'Home', :breadcrumb => [] } %>

  <h1 align="center">Articles</h1>

  <div class="list-group">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <%= link_to article, class: 'list-group-item list-group-item-action' do %>
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= article.title %></h5>
            <small><%= time_ago_in_words(article.created_at) %></small>
          </div>
          <p class="mb-1 text-truncate"><%= article.body %></p>
          <small><%= article.comments.size %> comments</small>
        <% end %>
      <% end %>
      </div>

    <% end %>
<% end %>
