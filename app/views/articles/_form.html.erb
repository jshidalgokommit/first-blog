<%= form_with model: article do |form| %>
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= form.label :title, class: 'form-label' %>
        <%= form.text_field :title, class: 'form-control', placeholder: 'Article title', required: 'require' %>
        <% article.errors.full_messages_for(:title).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>

      <div class="mb-3">
        <%= form.label :body, class: 'form-label' %>
        <%= form.text_area :body, class: 'form-control', rows: 3, required: 'require', minlength: 10 %>
        <% article.errors.full_messages_for(:body).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>

      <div class="mb-3">
        <%= form.label :status, class: 'form-label' %>
        <%= form.select :status, valid_statuses, {}, { class: 'form-control' } %>
      </div>

      <div>
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>

