<% content_for :blog_body do %>
  <%= render 'layouts/blog/breadcrumb', data: { :current => 'Bloggers', :breadcrumb => [{ :name => 'Home', :url => root_path }] } %>

  <h1 align="center">Bloggers</h1>

  <ul class="list-group">
    <% @bloggers.each do |blogger| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= blogger.full_name %>
        <%= followers_btn(blogger) %>
      </li>
    <% end %>
  </ul>
<% end %>
