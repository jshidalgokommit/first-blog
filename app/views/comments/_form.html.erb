<%= form_with model: [@article, @article.comments.build] do |form| %>
  <div class="card">
    <div class="card-body">
      <%= form.hidden_field :user_id, value: current_user.id %>
      <div class="mb-3">
        <%= form.label :commenter, class: 'form-label' %>
        <%= form.text_field :commenter, class: 'form-control', placeholder: 'Commenter', required: 'require', readonly: 'readonly', value: current_user.full_name %>
      </div>
      <div class="mb-3">
        <%= form.label :body, class: 'form-label' %>
        <%= form.text_area :body, class: 'form-control', rows: 3, required: 'require' %>
      </div>

      <div class="mb-3">
        <%= form.label :status, class: 'form-label' %>
        <%= form.select :status, valid_statuses, {}, { class: 'form-control' } %>
      </div>

      <div>
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
